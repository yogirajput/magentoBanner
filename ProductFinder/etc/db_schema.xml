<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="omnie_room_category" resource="default" engine="innodb" comment="Room Category">
    <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
    <column xsi:type="text" name="room_category" comment="Room Category"/>
    <column xsi:type="text" name="room_icon" comment="Room Category Icon"/>
    <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created at"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="id"/>
    </constraint>
  </table>
  <table name="omnie_blind_category" resource="default" engine="innodb" comment="Blind Type">
    <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
    <column xsi:type="text" name="blind_category" comment="Blind Type"/>
    <column xsi:type="text" name="blind_icon" comment="Blind Type Icon"/>
    <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created at"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="id"/>
    </constraint>
  </table>
  <table name="omnie_material_category" resource="default" engine="innodb" comment="Material Category">
    <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
    <column xsi:type="text" name="material_category" comment="Material Type"/>
    <column xsi:type="text" name="material_icon" comment="Material Type Icon"/>
    <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created at"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="id"/>
    </constraint>
  </table>
</schema>
